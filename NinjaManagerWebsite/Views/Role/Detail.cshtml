@model ERole

    <div class="dragon-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="dragon-form-header">
            <h2 class="pl-3">Edit Role</h2>
        </div>
        <div class="p-3 row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Id" disabled="disabled" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="RoleName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="RoleName" disabled="disabled" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Users in this role:</h3>
                    </div>
                    <div class="card-body">
                        @if (Model.Users.Count() > 0)
                        {
                            @foreach (var user in Model.Users)
                            {
                                <h5 class="card-title">@user</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">No users found with this role!</h5>
                        }
                    </div>
                    <div class="card-footer">
                        <div class="w-50 btn-group offset-3 text-center" role="group">
                            <a asp-controller="Role" asp-route-Id="@Model.Id" asp-action="EditUsersInRole" class="btn bronze-button">
                                Edit users
                            </a>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <a asp-action="Index" class="btn bronze-button w-50" style="margin-top:10px"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}