@model DDShop

<form class="dragon-form">
    <input asp-for="Shop.Id" hidden />
    <div>
        <div class="dragon-form-header">
            <h2 class="pl-3">Shop Inventory</h2>
        </div>
        <div class="p-3 row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Shop.ShopName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Shop.ShopName" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12">
                        <label asp-for="Inventory"></label>
                    </div>
                    <div style="width:100%">
                        <table class="dragon-item-table" style="width:100%">
                            <thead>
                                <tr>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Value
                                    </th>
                                    <th>
                                        Strength
                                    </th>
                                    <th>
                                        Dexterity
                                    </th>
                                    <th>
                                        Intelligence
                                    </th>
                                    <th>
                                        Category
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Inventory)
                                {
                                    <tr>
                                        <td>
                                            @item.item.Name
                                        </td>
                                        <td>
                                            @item.item.Value
                                        </td>
                                        <td>
                                            @item.item.Strenght
                                        </td>
                                        <td>
                                            @item.item.Dexterity
                                        </td>
                                        <td>
                                            @item.item.Intelligence
                                        </td>
                                        <td>
                                            @item.category.Name
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <a asp-action="Index" class="btn bronze-button w-100"><i class="fas fa-sign-out-alt"></i>Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
</form>
