@model IEnumerable<Shop>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="bronze-text">Shop Index</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Shop" asp-action="Create" class="btn bronze-button">
                Create New Shop
            </a>
        </div>
    </div>

    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="dragon-table" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Shop Id
                    </th>
                    <th>
                        Shop Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="10%">@item.Id</td>
                        <td width="30%">@item.ShopName</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Shop" asp-route-Id="@item.Id" asp-action="Edit" class="btn bronze-button">
                                    Edit Shop
                                </a>
                                <a asp-controller="Shop" asp-route-Id="@item.Id" asp-action="Delete" class="btn silver-button">
                                    Delete Shop
                                </a>
                                <a asp-controller="Shop" asp-route-Id="@item.Id" asp-action="Detail" class="btn golden-button">
                                    Shop Inventory
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Shops found! </p>
    }
</div>
